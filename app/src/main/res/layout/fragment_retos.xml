<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="fragments.Retos"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="394dp"
        android:id="@+id/scrollView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/retosNuevoRetoBtn" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/barcelona"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawablePadding="2dp"
                    android:drawableTop="@mipmap/camp"
                    android:gravity="center_horizontal"
                    android:text="@string/reto1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_column="0"/>



                <TextView
                    android:id="@+id/xBAr"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawablePadding="2dp"
                    android:drawableTop="@mipmap/time"
                    android:gravity="center_horizontal"
                    android:text="@string/reto2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_column="0"/>

            </TableRow>
        </TableLayout>
    </ScrollView>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/retos_NuevoReto"
        android:id="@+id/retosNuevoRetoBtn"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
