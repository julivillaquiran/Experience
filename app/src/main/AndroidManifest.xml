<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="julianv.com.experience" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".PrizeDetail"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".UserSelection"
            android:label="@string/title_activity_user_selection" >
        </activity>
        <activity
            android:name=".ChallengeSelector"
            android:label="@string/title_activity_challenge_selector" >
        </activity>
        <activity
            android:name=".ChallengeDescription"
            android:label="@string/title_activity_challenge_description" >
        </activity>
    </application>

</manifest>
